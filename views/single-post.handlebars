<nav aria-label="breadcrumb">
  <ol>
    <li><a href="/">Home</a></li>
    <li aria-current="page">{{post.title}}</li>
  </ol>
</nav>

<div>
    <h2>{{post.title}}</h2>
</div>

<div>
    <p>{{post.content}}</p>
</div>

<div>
    <p>Posted by {{post.user.username}} on {{format_date post.created_at}}</p>
</div>

{{#if post.comments.length}}
<hr>
<div>
    <p>{{post.comments.length}} comment(s):</p>
</div>


{{/if}}

<div>
    {{#each post.comments}}
    <div>
        <div>
            <small><strong>{{user.username}}</strong> on {{format_date created_at}}</small>
        </div>
        <p>{{comment_text}}</p>
    </div>
    {{/each}}
</div>

{{#if loggedIn}}
<div>
    <p>Add a comment</p>
    <form>
        <textarea name="comment-body"></textarea>
        <button type="submit">Submit</button>
    </form>
</div>

{{/if}}

{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}