<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
    </ol>
</nav>

<div class="row">
    <h1 class="text-capitalize mb-4">Hi {{username}}!</h1>
    <h3 class="mb-4">Create A New Post</h3>
</div>

<div class="row mb-4">
    <form class="new-post-form">
        <div class="row mb-3">
            <label for="post-title" class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-10">
                <input type="text" name="post-title" class="form-control" id="post-title">
            </div>
        </div>
        <div class="row mb-3">
            <label for="post-content" class="col-sm-2 col-form-label">Content</label>
            <div class="col-sm-10">
                <textarea type="text" name="post-content" class="form-control post-content" id="post-content"></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<div class="row">
    <h2 class="mb-4">Your Posts</h2>
</div>

{{#if posts.length}}
<div class="row">
    <div class="list-group">
        {{#each posts as |post|}}
        {{> post-info post}}
        {{/each}}
    </div>
</div>
{{else}}
<div class="row">
    <p>You don't have any posts.</p>
</div>
{{/if}}
<script src="/js/add-post.js"></script>